{
  "extends": ["config:base"],
  "timezone": "Australia/Adelaide",
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "branch",
      "excludePackageNames": ["^@angular", "@ngx-pwa/local-storage"]
    },
    {
      "updateTypes": ["major"],
      "automerge": false,
      "automergeType": "branch",
      "excludePackageNames": ["^@angular", "@ngx-pwa/local-storage"]
    }
  ]
}
