{
  "extends": ["config:base"],
  "timezone": "Australia/Adelaide",
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "updateTypes": ["major"],
      "automerge": false,
      "excludePackageNames": ["@ngx-pwa/local-storage"],
      "excludePackagePatterns": ["^@angular"]
    }
  ]
}
